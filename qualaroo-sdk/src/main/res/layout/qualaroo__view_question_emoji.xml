<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="10"
        android:layout_margin="10dp"
        android:baselineAligned="false"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:background="@drawable/qualaroo__border"
            android:id="@+id/emoji_layout_first"
            android:layout_height="@dimen/qualaroo_emoji_icon_height"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_margin="1dp"
                android:layout_height="match_parent"
                android:id="@+id/emoji_first"
                android:padding="@dimen/qualaroo_emoji_icon_padding"
                />
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/qualaroo__border"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:id="@+id/emoji_layout_second"
            android:layout_marginLeft="5dp"
            android:layout_height="@dimen/qualaroo_emoji_icon_height"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_margin="1dp"
                android:layout_height="match_parent"

                android:id="@+id/emoji_second"
                android:padding="@dimen/qualaroo_emoji_icon_padding"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:background="@drawable/qualaroo__border"
            android:id="@+id/emoji_layout_third"
            android:layout_height="@dimen/qualaroo_emoji_icon_height"
            android:layout_marginLeft="5dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_margin="1dp"
                android:layout_height="match_parent"
                android:id="@+id/emoji_third"
                android:padding="@dimen/qualaroo_emoji_icon_padding"

                />
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/qualaroo__border"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:id="@+id/emoji_layout_fourth"
            android:layout_height="@dimen/qualaroo_emoji_icon_height"
            android:layout_marginLeft="5dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_margin="1dp"
                android:layout_height="match_parent"
                android:id="@+id/emoji_fourth"
                android:padding="@dimen/qualaroo_emoji_icon_padding"
                />
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/qualaroo__border"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:id="@+id/emoji_layout_fifth"
            android:layout_marginLeft="5dp"
            android:layout_height="@dimen/qualaroo_emoji_icon_height"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_margin="1dp"
                android:layout_height="match_parent"
                android:id="@+id/emoji_fifth"
                android:padding="@dimen/qualaroo_emoji_icon_padding"

                />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
